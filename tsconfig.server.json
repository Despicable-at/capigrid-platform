{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "module": "commonjs", 
    "target": "es2020",
    "allowImportingTsExtensions": false, 
    "emitDeclarationOnly": true,
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*"]
}
