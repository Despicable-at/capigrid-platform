{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "dist/server",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "baseUrl": ".",                          
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["server/**/*"]
}
